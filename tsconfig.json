{
  "compilerOptions": {
    "outDir": "./built/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "ES6", // ES6 === ES2015
    //"lib": ["dom", "es2015.promise", "es5"],
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "removeComments": true,
    "strictNullChecks": true
  }
}
